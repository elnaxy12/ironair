generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Flight {
  id        Int      @id @default(autoincrement())
  airline   String
  from      String
  to        String
  date      DateTime
  depart    String
  arrive    String
  price     Int
  seats     Int
  createdAt DateTime @default(now())

  bookings Booking[]
}

model Booking {
  id        Int      @id @default(autoincrement())
  flightId  Int
  name      String
  nik       String
  status    String
  createdAt DateTime @default(now())

  flight Flight @relation(fields: [flightId], references: [id])
}
